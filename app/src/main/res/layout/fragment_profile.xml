<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkGrey"
    android:orientation="vertical"
    android:padding="40dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userImage"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@drawable/user_img_small" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/username_textview_style"
        android:text="@string/username"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/ultraLightGrey" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/email_textview_style"
        android:text="@string/email"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/ultraLightGrey" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sign_out_button"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/sign_out"
        android:textColor="@color/ultraLightGrey"
        app:strokeColor="@color/lightGrey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/progress"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/ultraLightGrey" />

        <ProgressBar
            android:id="@+id/progress_1"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/progress_bar_style"
            android:indeterminate="false"
            android:progressTint="@color/ultraLightGrey"
            android:theme="@style/ProgressTheme" />

        <ProgressBar
            android:id="@+id/progress_2"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/progress_bar_style"
            android:indeterminate="false"
            android:progressTint="@color/ultraLightGrey"
            android:theme="@style/ProgressTheme" />

        <ProgressBar
            android:id="@+id/progress_3"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/progress_bar_style"
            android:indeterminate="false"
            android:theme="@style/ProgressTheme" />

        <ProgressBar
            android:id="@+id/progress_4"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/progress_bar_style"
            android:indeterminate="false"
            android:theme="@style/ProgressTheme" />
    </LinearLayout>

</LinearLayout>